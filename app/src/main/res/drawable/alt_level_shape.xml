<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Линия в верхнем левом углу -->
    <item android:top="0dp">
        <shape android:shape="line">
            <size
                android:width="10dp"
                android:height="20dp" />
            <stroke android:color="#FAF8F8" android:width="2dp" /> <!-- Цвет и толщина линии -->
        </shape>
    </item>

    <!-- Линия посередине -->
    <item android:top="50dp">
        <shape android:shape="line">
            <size
                android:width="20dp"
                android:height="20dp" />
            <stroke android:color="#FAF8F8" android:width="2dp" /> <!-- Цвет и толщина линии -->
        </shape>
    </item>

    <!-- Линия в нижнем левом углу -->
    <item android:top="100dp">
        <shape android:shape="line">
            <size
                android:width="10dp"
                android:height="20dp" />
            <stroke android:color="#FAF8F8" android:width="2dp" /> <!-- Цвет и толщина линии -->
        </shape>
    </item>

</layer-list>





