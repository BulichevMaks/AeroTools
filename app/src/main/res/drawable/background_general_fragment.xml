<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Первый прямоугольник -->
    <item  android:gravity="top">
        <shape>
            <size
                android:width="90dp"
                android:height="208dp" />
            <gradient
                android:startColor="#2460F8"
                android:endColor="#F4F6F8"
                android:angle="270" />
        </shape>
    </item>

    <!-- Второй прямоугольник -->
    <item android:gravity="bottom">
        <shape>
            <size
                android:width="90dp"
                android:height="208dp"
                />
            <gradient
                android:startColor="#FF6F00"
                android:endColor="#FC99ADC6"
                android:angle="270" />
        </shape>
    </item>

</layer-list>