<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/button_pressed_color" /> <!-- Цвет фона при нажатии -->
            <stroke android:width="2dp" android:color="#FFFDFD" /> <!-- Контур кнопки -->
            <corners android:radius="50dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@android:color/transparent" /> <!-- Прозрачный цвет фона по умолчанию -->
            <stroke android:width="2dp" android:color="#FBFBFB" /> <!-- Контур кнопки -->
            <corners android:radius="16dp" />
        </shape>
    </item>
</selector>
