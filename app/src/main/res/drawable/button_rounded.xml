<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="4dp" /> <!-- Радиус закругления в dp -->
            <solid android:color="@color/teal_700" /> <!-- Цвет фона при нажатии -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="4dp" /> <!-- Радиус закругления в dp -->
            <solid android:color="@color/gray" /> <!-- Обычный цвет фона -->
        </shape>
    </item>
</selector>





